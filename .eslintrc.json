// ESLint configuration file to enforce code quality and consistent style across the project.
// Sets up environment, parser options, base rules, and plugins for Node.js and ECMAScript 2024.
// Uses recommended rules from ESLint and plugins for Node, import, and promise handling.
{
  // Specifies the environments for Node.js and ECMAScript 2024
  "env": {
    "node": true,
    "es2024": true
  },
  // Extends recommended ESLint rules and plugin recommendations
  "extends": [
    "eslint:recommended",
    "plugin:n/recommended",
    "plugin:import/recommended",
    "plugin:promise/recommended"
  ],
  // Sets ECMAScript version and module type
  "parserOptions": {
    "ecmaVersion": 2024,
    "sourceType": "module"
  },
  // Registers all plugins
  "plugins": ["n", "import", "promise"],
  // Custom linting rules for code style and error prevention
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-unused-vars": ["warn"],
    "no-console": ["off"]
  }
}
