// This file configures ESLint for the project to enforce code quality and style rules.
// It sets the environment, parser options, base rules, and custom linting rules for consistency.
// Updated to use ECMAScript 2024 (ES15) for latest JavaScript features and standards.
// Additional plugins added: eslint-plugin-n, eslint-plugin-es-x, @stylistic/eslint-plugin, eslint-plugin-import, eslint-plugin-promise
{
  // Specifies the environments for Node.js and ECMAScript 2024
  "env": {
    "node": true,
    "es2024": true
  },
  // Extends recommended ESLint rules and plugin recommendations
  "extends": [
    "eslint:recommended",
    "plugin:n/recommended",
    "plugin:es-x/recommended",
    "plugin:@stylistic/recommended",
    "plugin:import/recommended",
    "plugin:promise/recommended"
  ],
  // Sets ECMAScript version and module type
  "parserOptions": {
    "ecmaVersion": 2024,
    "sourceType": "module"
  },
  // Registers all plugins
  "plugins": ["n", "es-x", "@stylistic", "import", "promise"],
  // Custom linting rules for code style and error prevention
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-unused-vars": ["warn"],
    "no-console": ["off"]
  }
}
